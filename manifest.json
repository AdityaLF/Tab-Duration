{
  "manifest_version": 3,
  "name": "Tab Duration",
  "version": "1.0",
  "description": "Tracks time spent on websites.",
  "author": "AdityaLF (https://github.com/AdityaLF)",
  "homepage_url": "https://github.com/AdityaLF/Tab-Duration",
  "permissions": [
    "tabs",
    "storage",
    "idle",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}